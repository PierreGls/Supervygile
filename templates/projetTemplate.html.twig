{% extends 'headTemplate.html.twig' %}

{% block body %}
	{% include 'connectedTopTemplate.html.twig' %}

	<!-- Page projet -->
	
	<div class="container" id="pageProjet">
		<div class="row pt-5 mb-5">
			<a href="{{ path('connectedAccueil') }}" class="btn btn-outline-dark">Retour à la liste des projets</a>
		</div>
		
		<div class="row mt-5 mb-3">
			<h1 class="mx-auto"> {{projet.nom}} </h1>
		</div>
		
		<hr>
		
		<!-- Les membres du groupes -->
		<div class="row mt-3 mb-3">
			<div class="col-lg-2"> 
				<p class="mt-3">Membres du groupe : </p>
			</div>
			<div class="col-lg-10">
				{% for i in 1..3 %}
					<div class="mr-5 d-inline-block">																		<!-- Pour afficher en colonne les utilisateurs, enlever 'd-inline-block' -->
						<img class="imgProfil ml-2 mr-2" src="{{ absolute_url(asset('../assets/img/logoProfil.png')) }}">	
						<p class="d-inline-block mt-auto"> Nom Prenom </p>
					</div>
				{% endfor %}
			</div>
		</div>
		
		<hr>
		
		<!-- Si le backlog product n'est pas encore construit -->
		<div class="row mt-5 mb-5">
			<p class="px-5 pt-3 pb-3 border border-success bg-light"> Félicitations ! Vous venez de créer ce nouveau projet. Vous devez maintenant créer votre Backlog Product afin de définir les fonctionnalités que vous allez développer. C'est la base d'un projet agile. </br> 
				Commencez votre projet en créeant une première fonctionnalité.</p>
		</div>
		
		<!-- Les fonctionnalités -->
		<div class="row mb-5" id="listeFonctionnalités">
		
			{% for i in 1..3 %}
				<a href="{{ path('fonctionnalite') }}"  class="col-md-3 mr-1 mb-1 btn btn-outline-dark" >
					<div class="text-truncate">
						<p class="mx-auto bg-danger text-white" style="border-radius:5px;">priorité : forte</p>
						<p class="mt-1 mb-5" style="font-size:1.7em;">F1 : </br> Nom fonctionnalité 1</p>
						<div class="progress mt-auto">
							<div class="progress-bar progress-bar-striped" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
						</div>
					</div>
				</a>
			{% endfor %}
			
			<div class="col-md-3 btn btn-outline-dark mr-1 mb-1">
				<form action="{{ path('fonctionnalite') }}" class="form-horizontal col-lg-12"  method="POST">
					<input type="text" class="form-control mt-3 mb-5" placeholder="Nom fonctionnalité" aria-label="Username" aria-describedby="basic-addon1" required>
					<input class="btn btn-primary" type="submit" value="Créer" />
				</form>
			</div>
			
			<div class="col-md-3 mr-1 mb-1 btn btn-outline-dark" style="font-size:9em;">+</div> <!-- Dernière carte -->
		</div>
		
		
		{#
		<!-- Les fonctionnalités -->
		<div class="row mb-5">
			{% for i in 1..3 %}

				
			{% endfor %}
		</div>
		#}
	</div>
		
	{% include 'footTemplate.html.twig' %}
	
{% endblock %}
{% extends 'headTemplate.html.twig' %}

{% block body %}
	{% include 'connectedTopTemplate.html.twig' %}
	

	<!-- Page Fonctionnalité -->
	
	<div class="container" id="pageFonctionnalite">
	
		<form action="#" class="form-horizontal col-lg-12"  method="POST"> 					<!-- action à remplir -->
			
			{% for i in 1..3 %}
			
				<div class="nomUserStory mb-2 mt-5 text-center">
					<input data-container="body" class="border border-white pl-2 pr-2" type="text" name="nomUS1" value="Nom User Story 1" data-toggle="popover" data-placement="right" data-content="Le nom d'une user story se compose d'un Sujet, d'un Verbe et d'une Action">					<!-- ajouter un script permettant le popover -->
				</div>
				
				<table class="table mt-2 mb-5 border border-success text-center">
				  <thead class="bg-success">
					<tr class="text-white">
					  <th scope="col">#</th>
					  <th scope="col">Nom de la tâche</th>
					  <th scope="col">Deadline</th>
					  <th scope="col">Tâche finie</th>
					  <th scope="col">Supprimer cette tâche</th>
					</tr>
				  </thead>
				  <tbody>
					<tr>
					  <th scope="row">1</th>
					  <td><input type="text" name="nomTache1" value="Nom tache 1"></td>
					  <td><input type="date" name="deadline1"></td>
					  <td><input type="checkbox" class="mx-auto" name="checkbox1"></td>
					  <td><button class="btn btn-outline-danger"> Supprimer </button></td>
					</tr>
					<tr>
					  <th scope="row">2</th>
					  <td><input type="text" name="nomTache2" value="Nom tache 2"></td>
					  <td><input type="date" name="deadline2"></td>
					  <td><input type="checkbox" class="mx-auto" name="checkbox2"></td>
					  <td><button class="btn btn-outline-danger"> Supprimer </button></td>
					</tr>
					<tr>
					  <th scope="row">3</th>
					  <td><input type="text" name="nomTache3" value="Nom tache 3"></td>
					  <td><input type="date" name="deadline3"></td>
					  <td><input type="checkbox" class="mx-auto" name="checkbox3"></td>
					  <td><button class="btn btn-outline-danger"> Supprimer </button></td>
					</tr>
					<tr>
					  <th scope="row">4</th>
					  <td colspan="4"><button class="btn btn-success btn-lg"> Ajouter une tâche</button></td>
					</tr>
				  </tbody>
				</table>
			
			{% endfor %}
			
			<div class="text-center mb-5">
				<input class="btn btn-primary d-inline-block" type="submit" value="Valider mes changements">
			</div>
			
		</form>
		
	</div>
		
	{% include 'footTemplate.html.twig' %}
	
{% endblock %}
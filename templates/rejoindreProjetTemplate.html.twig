{% extends 'headTemplate.html.twig' %}

{% block body %}
	{% include 'connectedTopTemplate.html.twig' %}

	<!-- Rejoindre un projet -->
	
	<div class="container col-12 mt-5 mb-5" id="pageRejoindreProjet">
		<form class="form-horizontal col-lg-12"  action="{{ path('recherche') }}" method="POST">
		  	  
			<div class="row"> 
				<div class="form-group col-lg-4 d-inline-block">
					<label for="text" class="col-lg-5 control-label">Titre du projet : </label>
					<div class="col-lg-6 d-inline-block">
						<input type="text" class="form-control" name="titreProjet" placeHolder="Supervygile"> 
					</div>
				</div>
			
				<div class="form-group col-lg-4 d-inline-block">
					<label for="text" class="col-lg-5 control-label">ID du projet : </label>
					<div class="col-lg-6 d-inline-block">
						<input type="number" class="form-control" name="idProjet" placeHolder="1"> 
					</div>
				</div>

				
			</div>
	
	
			<div class="row form-group mt-2 mb-2">
				<input class="btn btn-success mx-auto" type="submit" value="Rechercher" />
			</div>
		</form>
		
		
		<hr class="col-10">
		
		{# Liste des projets recherch√©s #}
		
		
		<div id="listeRechercheProjet">
			{% if projets is defined %}
				
					{% for projet in projets %}
						{% if projet is not null %}
							
							<div class="row col-10 mx-auto mb-4">
								<div class="card col-12 px-0">
									<h5 class="card-header">Membres : </h5>
									<div class="card-body">
										<h5 class="card-title ">Titre projet : {{projet.nom}} </h5>
										<p class="card-text">Description : {{projet.description}}</p>
										<div class="text-center">
											<a href="{{path('validerReunion',{id: projet.id})}}" class="btn btn-primary">Rejoindre ce projet</a>
										</div>
									</div>
								</div>
							</div>
						{% endif %}
					{% endfor %}
				
			{% else %}
				<h1> Recherchez un projet par titre ou par id</h1>
			{% endif %}
			
			
		</div>
		
	
	</div>
	
		
	{% include 'footTemplate.html.twig' %}
	
{% endblock %}